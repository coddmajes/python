#!/usr/bin/env python3
# -*- coding: utf-8 -*-

#转义字符
print('I\'m \"ok\"')

print()

n = 123
print(n)
f = 456.789
print(f)
s1 = 'Hello,world'
print(s1)
s2 = 'Hello,\\\'Adam\\\''
print(s2)
s3 = 'r\'Hello,\"Bart\"'
print(s3)
s4 = 'r\'\'\'Hello,Lisa!\'\'\''
print(s4)

