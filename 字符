#encode() 编程为指定的bytes
'ABC'.encode('ascii')
'中文'.encode('utf-8')
'中文'.encode('ascii')#不能将中文字符用ascii编码

#decode() 编程为指定的str
 b'ABC'.decode('ascii')
 b'\xe4\xb8\xad\xe6\x96\x87'.decode('utf-8')
 
 
 #str 用len()函数 计算字符数
 len('ABC')
 
 #bytes 用len()函数 计算比特数
 len('中文'.encode('utf-8'))
 
